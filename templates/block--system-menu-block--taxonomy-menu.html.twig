{% block content %}

<div class="rootstalk-block">
  <h2 class="block-title">{{ label }}</h2>
  <div class="block-text"><p>
    Filter our content to match your interests. Contact us and share your thoughts.</p>
  </div>
  <div class="block-content">
    {{ content }}
  </div>
</div>

{#
<div class='site-banner'>
  {% if site_logo %}
    <a class="logo navbar-btn pull-left" href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">
      <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
    </a>
  {% endif %}
  {% if site_name %}
    <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">
      <div class='site-name-block'>
        <div class='site-name'>{{ site_name }}</div>
        {% if site_slogan %}
          <span class="site-slogan">{{ site_slogan }}</span>
        {% endif %}
      </div>
    </a>
  {% endif %}
  </div>
#}

{% endblock %}

